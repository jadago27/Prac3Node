{% include "public_base.njk" %}
<form action="/buscar" method="get">
    <div class="form-group">
        <label for="titulo">Buscar:</label>
        <input type="text" class="form-control" name="buscar"
        placeholder="buscar..." value=""/>
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

{% if resultado %}
    <ul>
        {% for pelicula in resultado %}
            {% if loop.index % 2 == 0 %}
                <li class="par">
            {% else %}
                <li class="impar">
            {% endif %}
                {{ pelicula.titol }}: 
                <a href="/pelicula/{{ pelicula.id }}" class="btn btn-success">Ficha pelicula</a>
            </li>                       
        {% else %}
            <div class="alert alert-danger">
                No es van trobar pel·lícules
            </div>
        {% endfor %}
    </ul>
{% endif %}